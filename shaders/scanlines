#version 330 core
out vec4 FragColor;

in vec2 TexCoord;

uniform sampler2D screenTexture;

void main()
{
    vec4 color = texture(screenTexture, TexCoord);
    // Apply a scanline effect
    float scanline = sin(TexCoord.y * 3.14 * 32.0) * 0.1;
    // Apply a slight blue-green tint
    color.rgb = color.rgb * vec3(0.8, 0.9, 1.0) + scanline;
    FragColor = color;
}
